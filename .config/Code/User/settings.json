{
  "bracket-pair-colorizer-2.colors": [
    "DarkGreen",
    "Black",
    "DarkBlue"
  ],

  // vim
  "keyboard.dispatch": "keyCode",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["s"],
      "after": ["<leader>", "<leader>", "<leader>", "b", "d", "e"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-v>": false,
    "<C-c>": false
  },
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": false
  },
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Input Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 11,
  "window.zoomLevel": 1,
  "editor.suggestSelection": "first",
  "editor.renderIndentGuides": false,
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "emmet.triggerExpansionOnTab": true,
  "java.home": "~/.jenv/versions/11.0.8",
  "vim.debug.silent": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "newUntitledFile",
  "vim.easymotionMarkerBackgroundColor": "#e4f6d2",
  "vim.easymotionMarkerForegroundColorOneChar": "black",
  "vim.easymotionMarkerForegroundColorTwoChar": "black",
  "editor.minimap.enabled": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Ra Spring"
}
