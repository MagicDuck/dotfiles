#!/bin/zsh

local list
read -r -d '' list <<-EOF
vim
frontend-dev
frontend-webpack
frontend-test-changed
frontend-test
ondemand
qmk-flash-dactyl
EOF

local cmd
cmd=$(echo $list | fzf) || exit 0
case "$cmd" in
    vim)
        kitty @launch --type tab --location=after --title vim  --cwd /opt/repos/frontend/reactUi zsh -i
        kitty @send-text "vim\n"
        ;;
    frontend-dev)
        kitty @launch --type tab --location=after --title scratch  --cwd /opt/repos/frontend/reactUi
        kitty @launch --type tab --location=after --title vim  --cwd /opt/repos/frontend/reactUi zsh -i
        kitty @send-text "vim src/Application/ApplicationShell/ApplicationShell.jsx\n"
        kitty @launch --type tab --location=after --title webpack  --cwd /opt/repos/frontend/reactUi zsh -i
        kitty @send-text "pnpm webpack-dev:cloud:hot --env customerUrl=kramerica.dev.xmatters.com\n"
        kitty @ focus-tab --match title:vim
        ;;
    frontend-webpack)
        kitty @launch --type tab --location=after --title webpack  --cwd /opt/repos/frontend/reactUi zsh -i
        kitty @send-text "pnpm webpack-dev:cloud:hot --env customerUrl=kramerica.dev.xmatters.com\n"
        ;;
    frontend-test-changed)
        kitty @launch --type tab --location=after --title frontend-test-changed  --cwd /opt/repos/frontend/reactUi zsh -i
        kitty @send-text "pnpm run test --watch --changedSince=origin/main\n"
        ;;
    frontend-test)
        kitty @launch --type tab --location=after --title frontend-test  --cwd /opt/repos/frontend/reactUi
        ;;
    ondemand)
        kitty @launch --type tab --location=after --title ondemand  --cwd /opt/repos/ondemand
        ;;
    qmk-flash-dactyl)
        kitty @launch --type tab --location=after --title qmk-flash --cwd /opt/repos/qmk_firmware zsh -i
        kitty @send-text "qmk-flash-dactyl\n"
        ;;
    *)
        echo "No command defined for: $cmd"
        exit 1
        ;;
esac
